{{/*
  Floating Action Button for Customer Support
  Uses DaisyUI FAB component with WhatsApp and Email options
*/}}

{{ $whatsappNumber := config "whatsapp_number" }}
{{ $adminEmail := config "admin_email" }}

{{ if or (exists $whatsappNumber) (exists $adminEmail) }}
<div class="fab">
  <!-- Main FAB Toggle Button -->
  <div tabindex="0" role="button" class="btn btn-lg btn-circle btn-primary">
    <svg width="48px" height="48px" viewBox="0 0 120 120" xmlns="http://www.w3.org/2000/svg">
      <style type="text/css">
        .st0{fill:#A9F1DF;}
        .st1{fill:#1EAE98;}
        .st2{fill:#FFFFFF;}
      </style>
      <g>
        <path class="st0" d="M58.3,58.2H37.5l-15.1,9c-0.6,0.4-1.3-0.2-1.2-0.9l2.2-8.2h-6.7c-1.8,0-3.4-1.6-3.4-3.4V28.7c0-1.8,1.6-3.4,3.4-3.4h41.6c1.8,0,3.4,1.6,3.4,3.4v26.2C61.7,56.8,60.2,58.2,58.3,58.2z"/>
        <path class="st1" d="M48.2,82.8h27.1l19.7,11.7c0.8,0.5,1.7-0.3,1.6-1.1l-2.9-10.6h8.7c2.4,0,4.4-2.1,4.4-4.4V44.5c0-2.4-2.1-4.4-4.4-4.4h-54c-2.4,0-4.4-2.1-4.4-4.4v34.1C43.7,80.9,45.8,82.8,48.2,82.8z"/>
        <g>
          <path class="st2" d="M75.3,58.1c1.9,0,3.3,1.6,3.3,3.3s-1.6,3.3-3.3,3.3c-1.9,0-3.3-1.6-3.3-3.3S73.4,58.1,75.3,58.1z"/>
          <path class="st2" d="M88.9,58.1c1.9,0,3.3,1.6,3.3,3.3s-1.6,3.3-3.3,3.3c-1.9,0-3.3-1.6-3.3-3.3S87,58.1,88.9,58.1z"/>
          <path class="st2" d="M61.6,58.1c1.9,0,3.3,1.6,3.3,3.3s-1.6,3.3-3.3,3.3c-1.9,0-3.3-1.6-3.3-3.3S59.7,58.1,61.6,58.1z"/>
        </g>
      </g>
    </svg>
  </div>

  <!-- Action Buttons (show when FAB is open) -->
  {{ if exists $whatsappNumber }}
  <a href="https://wa.me/{{ $whatsappNumber }}"
     target="_blank"
     rel="noopener noreferrer"
     class="btn btn-lg btn-circle btn-success"
     aria-label="WhatsApp">
    <svg width="24px" height="24px" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">

      <defs>
        <linearGradient id="paint0_linear_87_7264" x1="26.5" y1="7" x2="4" y2="28" gradientUnits="userSpaceOnUse">
          <stop stop-color="#5BD066"/>
          <stop offset="1" stop-color="#27B43E"/>
        </linearGradient>
      </defs>
    </svg>
  </a>
  {{ end }}

  {{ if exists $adminEmail }}
  <a href="mailto:{{ $adminEmail }}"
     class="btn btn-lg btn-circle btn-info"
     aria-label="Email">
    <svg width="24px" height="24px" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
      <g style="stroke:#333333;stroke-width:2">
        <path style="fill:#C4C48B" d="m 3,16 94,0 0,68 -94,0 z"/>
        <path style="fill:#EAEAAB" d="m 4,16 34,33 c 7,7 15,7 23,0 L 96,16 z"/>
        <path style="fill:none" d="M 96,84 59,51 M 4,84 40,51"/>

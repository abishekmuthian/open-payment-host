<section class="narrow">

    <form action="/users/{{.user.ID}}/password/update" method="post">
        <h1> Password</h1>
        {{ field "Current Password" "password" "" "password" "type=password" }}
        {{ field "Confirm Password" "confirm_password" "" "password" "type=password" }}
        <div class="actions">
            <input type="submit" class="button" value="UPDATE PASSWORD">
        </div>
    </form>


</section>
